<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uwimonacs.computingsociety">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CreateAccountActivity" />
        <activity android:name=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar.NoStatusBar"/>
        <activity android:name=".activities.UserProfileActivity" />
        <activity android:name=".activities.NewsItemActivity" />

        <!-- DB Name -->
        <meta-data
            android:name="AA_DB_NAME"
            android:value="compsoc.db" />

        <!-- DB Version -->
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="2" />

        <!-- Models -->
        <meta-data
            android:name="AA_MODELS"
            android:value="" />

        <activity
            android:name=".activities.BlogPostActivity"
            android:theme="@style/AppTheme.NoActionBar.BlogPostActivity" />
        <activity android:name=".activities.EditProfileActivity" />
        <activity android:name=".activities.ForumPostActivity" />
        <activity android:name=".activities.CreateForumPostActivity"
            android:theme="@style/AppTheme.NoActionBar.Transparent"/>
        <activity android:name=".activities.CreateBlogPostActivity" />
        <activity android:name=".activities.BlogActivity" />
    </application>

</manifest>