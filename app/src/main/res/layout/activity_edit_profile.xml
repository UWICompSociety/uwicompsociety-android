<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:titleEnabled="false">
            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:selectableItemBackground"
                android:id="@+id/edit">
                <ImageView
                    android:id="@+id/avatar"
                    android:transitionName="summary"
                    tools:targetApi="lollipop"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="pin"
                    android:src="@drawable/profile_avatar"/>
                <ImageView
                    android:id="@+id/camera_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="16dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/camera_white"
                    app:layout_anchor="@id/avatar"
                    app:layout_anchorGravity="bottom|end"
                    android:foreground="?android:selectableItemBackground"/>
            </android.support.design.widget.CoordinatorLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:title=" "
                android:background="@android:color/transparent"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e5e5e5"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="16dp"
                            android:layout_gravity="bottom"
                            app:srcCompat="@drawable/account_black"/>
                        <EditText
                            android:id="@+id/name"
                            android:background="@android:color/transparent"
                            android:inputType="textAutoComplete|textCapWords"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:minLines="1"
                            android:textColor="#667279"
                            android:textColorHint="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:hint="@string/name_hint"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="16dp"
                            android:layout_gravity="bottom"
                            app:srcCompat="@drawable/email_black"/>
                        <EditText
                            android:id="@+id/email"
                            android:background="@android:color/transparent"
                            android:inputType="textEmailAddress|textCapWords"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:minLines="1"
                            android:textColor="#667279"
                            android:textColorHint="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:hint="@string/email_hint"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="16dp"
                            android:layout_gravity="bottom"
                            app:srcCompat="@drawable/account_black"/>
                        <EditText
                            android:id="@+id/username"
                            android:background="@android:color/transparent"
                            android:inputType="textAutoComplete"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:minLines="1"
                            android:textColor="#667279"
                            android:textColorHint="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:hint="@string/username_hint"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="16dp"
                            android:layout_gravity="bottom"
                            app:srcCompat="@drawable/github_circle_black"/>
                        <EditText
                            android:id="@+id/github_username"
                            android:background="@android:color/transparent"
                            android:inputType="textAutoComplete"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:minLines="1"
                            android:textColor="#667279"
                            android:textColorHint="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:hint="@string/github_username_hint"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="16dp"
                            android:layout_gravity="bottom"
                            app:srcCompat="@drawable/facebook"/>
                        <EditText
                            android:id="@+id/facebook_url"
                            android:background="@android:color/transparent"
                            android:inputType="textUri"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:minLines="1"
                            android:textColor="#667279"
                            android:textColorHint="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:hint="@string/prompt_facebook"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="16dp"
                            android:layout_gravity="bottom"
                            app:srcCompat="@drawable/twitter"/>
                        <EditText
                            android:id="@+id/twitter_url"
                            android:background="@android:color/transparent"
                            android:inputType="textUri"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:minLines="1"
                            android:textColor="#667279"
                            android:textColorHint="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:hint="@string/prompt_twitter"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="16dp"
                            android:layout_gravity="bottom"
                            app:srcCompat="@drawable/instagram_black"/>
                        <EditText
                            android:id="@+id/instagram_url"
                            android:background="@android:color/transparent"
                            android:inputType="textUri"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:minLines="1"
                            android:textColor="#667279"
                            android:textColorHint="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:hint="@string/prompt_instagram"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="16dp"
                            android:layout_gravity="bottom"
                            app:srcCompat="@drawable/linkedin"/>
                        <EditText
                            android:id="@+id/linkedin_url"
                            android:background="@android:color/transparent"
                            android:inputType="textUri"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:minLines="1"
                            android:textColor="#667279"
                            android:textColorHint="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:hint="@string/prompt_linkedin"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="16dp"
                            android:layout_gravity="bottom"
                            app:srcCompat="@drawable/snapchat_black"/>
                        <EditText
                            android:id="@+id/snapchat_url"
                            android:background="@android:color/transparent"
                            android:inputType="textUri"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:minLines="1"
                            android:textColor="#667279"
                            android:textColorHint="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:hint="@string/prompt_snapchat"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="16dp"
                            android:layout_gravity="bottom"
                            app:srcCompat="@drawable/github_face"/>
                        <EditText
                            android:id="@+id/github_url"
                            android:background="@android:color/transparent"
                            android:inputType="textUri"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:minLines="1"
                            android:textColor="#667279"
                            android:textColorHint="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:hint="@string/prompt_github"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>