<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:titleEnabled="false">
            <ImageView
                android:id="@+id/avatar"
                android:transitionName="summary"
                tools:targetApi="lollipop"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                app:layout_collapseMode="pin"
                android:src="@drawable/profile_avatar"/>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:title=" "
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:background="@android:color/transparent"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e5e5e5"
        android:layout_marginBottom="?attr/actionBarSize"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="16dp"
                            android:layout_gravity="bottom"
                            app:srcCompat="@drawable/account_black"/>
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:minLines="1"
                            android:textColor="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:text="@string/name_hint"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="16dp"
                            android:layout_gravity="bottom"
                            app:srcCompat="@drawable/email_black"/>

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:minLines="1"
                            android:textColor="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:text="@string/email_hint"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="16dp"
                            android:layout_gravity="bottom"
                            app:srcCompat="@drawable/account_black"/>
                        <TextView
                            android:id="@+id/username"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:minLines="1"
                            android:textColor="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:text="@string/username_hint"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="16dp"
                            android:layout_gravity="bottom"
                            app:srcCompat="@drawable/github_circle_black"/>
                        <TextView
                            android:id="@+id/github_username"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:minLines="1"
                            android:textColor="#667279"
                            android:textSize="14sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:text="@string/github_username_hint"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end" />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="0.5dp"
                            android:layout_gravity="end"
                            android:background="@android:color/darker_gray" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/view_blogs"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:foreground="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:text="@string/view_blogs" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/view_discussions"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:foreground="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:text="@string/view_discussions" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/view_projects"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:foreground="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:text="@string/view_projects" />
            </android.support.v7.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:clickable="true"
        app:srcCompat="@drawable/pencil_white"
        app:backgroundTint="@color/colorAccent"
        android:foreground="?android:selectableItemBackground"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/facebook_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/facebook_box_white"
            android:foreground="?attr/selectableItemBackground"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/twitter_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/twitter_box_white"
            android:foreground="?attr/selectableItemBackground"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/instagram_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/instagram_white"
            android:foreground="?attr/selectableItemBackground"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/linkedin_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/linkedin_box_white"
            android:foreground="?attr/selectableItemBackground"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/snapchat_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/snapchat_white"
            android:foreground="?attr/selectableItemBackground"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/github_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/github_box_white"
            android:foreground="?attr/selectableItemBackground"
            android:layout_weight="1"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>