<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create_blog_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uwimonacs.computingsociety.activities.CreateBlogPostActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:title="Blog name"/>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:selectableItemBackground"
                android:id="@+id/edit">
                <TextView
                    android:id="@+id/banner_label"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="#bdbdbd"
                    android:text="Select image"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title" />
                <ImageView
                    android:id="@+id/banner"
                    android:transitionName="banner"
                    tools:targetApi="lollipop"
                    android:background="#bdbdbd"
                    android:alpha="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:foreground="?android:selectableItemBackground"/>
                <ImageView
                    android:id="@+id/camera_button"
                    android:layout_width="32dp"
                    android:layout_height="48dp"
                    android:layout_margin="16dp"
                    android:paddingBottom="16dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/camera_white"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:foreground="?android:selectableItemBackground"/>
            </RelativeLayout>
            <EditText
                android:id="@+id/title"
                android:transitionName="title"
                tools:targetApi="lollipop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:textSize="24sp"
                android:inputType="textAutoComplete|textCapSentences|textMultiLine"
                android:background="@android:color/transparent"
                android:hint="Write your title here"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/darker_gray" />
            <EditText
                android:id="@+id/message"
                android:transitionName="message"
                tools:targetApi="lollipop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:inputType="textAutoComplete|textCapSentences|textMultiLine"
                android:background="@android:color/transparent"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:hint="Write your post here"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Just now"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/btn_like"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/thumb_up"
                        android:foreground="?android:selectableItemBackground"/>
                    <TextView
                        android:id="@+id/num_like"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:text="0"
                        android:layout_marginLeft="8dp" />
                    <ImageView
                        android:id="@+id/btn_dislike"
                        android:layout_marginStart="16dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/thumb_down"
                        android:foreground="?android:selectableItemBackground"
                        android:layout_marginLeft="16dp" />
                    <TextView
                        android:id="@+id/num_dislike"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:text="0"
                        android:layout_marginLeft="8dp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
